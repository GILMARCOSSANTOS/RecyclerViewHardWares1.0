<?xml version="1.0" encoding="utf-8"?>

<!-- PASSO 05: RESTRINGIR LARGURA PARA wrap_content -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtVw_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SessÃ£o Hardwares de PC's"
        android:textSize="25sp"
        android:background="@color/teal_700"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- PASSO 05: VEIO DE mainActivity.kt -->
    <!-- SEGUE PARA PACOTE model -->
    <ImageView
        android:id="@+id/fotoProdutoId"
        android:layout_width="150dp"
        android:layout_height="165dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:scrollbarSize="17dp"
        android:src="@drawable/gabinete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVw_title" />

    <TextView
        android:id="@+id/nomeProdutoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="2"
        android:text="@string/gabineteGamer"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoProdutoId"
        app:layout_constraintTop_toBottomOf="@id/txtVw_title" />

    <TextView
        android:id="@+id/descricaoProdutoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        android:text="@string/descricaoGabinete"
        android:textAlignment="textStart"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/fotoProdutoId"
        app:layout_constraintTop_toBottomOf="@+id/nomeProdutoId" />

    <TextView
        android:id="@+id/precoProdutoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/preco"
        android:textColor="@color/green"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoProdutoId"
        app:layout_constraintTop_toBottomOf="@+id/descricaoProdutoId" />


</androidx.constraintlayout.widget.ConstraintLayout>